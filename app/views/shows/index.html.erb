<p id="notice"><%= notice %></p>

<h1>Shows</h1>

<table class="tablecenter">
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shows.each do |show| %>
      <tr class="navtext">
        <td><%= Date.parse(show.show_date.to_s).strftime('%m/%d/%Y') %></td>
        <td><%= show.show_time %></td>
        <td><%= show.venue %></td>
        <td><%= show.city %></td>
        <td><%= show.state %></td>
        
      </tr>
    <% end %>
  </tbody>
  
</table>
<div class="nav">
<%= link_to 'New Show', new_show_path, class: "navtext", align: "center" %>
</div>
<div class="tablecenter">
<%= react_component 'Main' %>
</div>
